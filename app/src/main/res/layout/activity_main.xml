<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lb_tv_white">

    <EditText
        android:id="@+id/link_text"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:hint="Enter link"
        android:text="https://www.youtube.com/watch?v=JbzBelznMoM"
        android:background="@color/lb_error_background_color_opaque"
        android:textColor="@color/lb_tv_white" />

    <Button
        android:id="@+id/youtube_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/lb_error_background_color_opaque"
        android:text="Open Youtube"
        android:textColor="@color/lb_tv_white" />

</FrameLayout>